<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.AppInfoActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#0084CA"
        android:onClick="SignOut"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        tools:context=".controllers.UserProfileActivity"
        tools:layout_editor_absoluteX="0dp">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="53dp"
            android:layout_height="53dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="13dp"
            android:onClick="MainActivity"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/return_icon" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"
            android:layout_marginTop="92dp"
            android:fontFamily="sans-serif-black"
            android:text="About this app:"
            android:textColor="#E6E8E7"
            android:textSize="30sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/app_info"
            android:layout_width="350dp"
            android:layout_height="440dp"
            android:layout_marginStart="32dp"
            android:layout_marginTop="188dp"
            android:fontFamily="sans-serif-medium"
            android:text="We are proposing the addition of Carpool Buddy. This app looks to connect and encourage students to carpool together. The benefits are: Less CO2 emissions and fewer fossil fuels are generated from non-electric vehicles, less traffic on Braemar Hill, which means less idling of vehicles and shorter traffic/commute time to and from CIS, encourage the use of electric cars through prioritization, allow for alternative vehicles to be used, like bicycles (reduce emissions), helicopters (reduce traffic), and segways (reduce traffic and emissions), allow opportunities to connect and build relationships with other members of the community."
            android:textColor="#FAF6F6"
            android:textColorHighlight="#FAF6F6"
            android:textColorHint="#FAF6F6"
            android:textColorLink="#FAF6F6"
            android:textSize="20sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="53dp"
        android:layout_height="53dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="13dp"
        android:onClick="MainActivity"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/return_icon" />

</androidx.constraintlayout.widget.ConstraintLayout>