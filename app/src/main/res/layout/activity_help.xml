<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controllers.profile.HelpActivity">

    <TextView
        android:id="@+id/tt"
        android:layout_width="341dp"
        android:layout_height="41dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="144dp"
        android:fontFamily="sans-serif-medium"
        android:text="QnA"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="245dp"
        android:layout_height="49dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="94dp"
        android:fontFamily="sans-serif-black"
        android:text="Help Page"
        android:textSize="34sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="299dp"
        android:layout_height="26dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="236dp"
        android:fontFamily="sans-serif-black"
        android:text="How will I settle my payment?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView28"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="260dp"
        android:fontFamily="sans-serif-medium"
        android:text="We recommend by cash, Wechat, or Alipay. But just in case, it is best to contact and question your driver beforehand."
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView57"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="376dp"
        android:fontFamily="sans-serif-medium"
        android:text="We recommend that you do some research beforehand and pick an appropriate price level. Any parties involved in the payment process can contact you if they have any concerns."
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView52"
        android:layout_width="305dp"
        android:layout_height="63dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="328dp"
        android:fontFamily="sans-serif-black"
        android:text="How should I decide the pricing of the vehicle I am posting?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView58"
        android:layout_width="305dp"
        android:layout_height="63dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="456dp"
        android:fontFamily="sans-serif-black"
        android:text="How are discounts provided, and who is eligible?"
        android:textSize="16sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView59"
        android:layout_width="304dp"
        android:layout_height="102dp"
        android:layout_marginStart="52dp"
        android:layout_marginTop="500dp"
        android:fontFamily="sans-serif-medium"
        android:text="Students are eligible. Using your School-provided Google account, you will be able to get a discount."
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView15"
        android:layout_width="46dp"
        android:layout_height="46dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="38dp"
        android:layout_marginBottom="762dp"
        android:elevation="10dp"
        android:onClick="back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0"
        app:srcCompat="@drawable/back" />

</androidx.constraintlayout.widget.ConstraintLayout>